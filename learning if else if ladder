#include <iostream>

using namespace std;

int main()
{
    cout<<"Here it the calendar please enter a number between 1 to 7 inclusive"<<endl;
    int day_number;
    cin>>day_number;  // 1-> monday 2->tuesda 3-> wednesday ..... 7->sunday and then a default
    if(day_number==1){
    cout<<"the day is monday"<<endl;
    
    }else if (day_number==2){
    cout<<"the day is tuesday"<<endl;
    }else if (day_number==3){
    cout<<"the day is wednesday"<<endl;
    }else if (day_number==4){
    cout<<"the day is thursday"<<endl;
    }else if (day_number==5){
    cout<<"the day is friday"<<endl;
    }else if (day_number==6){
    cout<<"the day is saturday"<<endl;    
    }else if (day_number==7){
    cout<<"the day is sunday"<<endl;
    }else{
    cout<<"enter a vilid number"<<endl;    
    }
    return 0;
}
    
